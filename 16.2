   }if(CountryName.equals("India")){

  imageView.setImageResource(R.drawable.india2);

  textView.setText(R.string.Bangladesh3_txt);

   }
   if(CountryName.equals("Pakistan")){

  imageView.setImageResource(R.drawable.pakistan2);

textView.setText(R.string.Bangladesh2_txt);

   }

    }



}


